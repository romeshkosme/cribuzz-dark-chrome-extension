{
  "manifest_version": 3,
  "name": "Cricbuzz Dark",
  "description": "Cribuzz Dark is an extension for dark theme.",
  "version": "0.1.1",
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.cricbuzz.com/*"],
      "js": ["./scripts/content.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "./images/cricdark.png"
  }
}
